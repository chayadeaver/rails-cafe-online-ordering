<header class="break">
<h2><%= @menu.name %></h2>
</header>


<% @menu.items.each do |item| %>
    <p><%= link_to item.name, item_path(item) %></p>
<% end %>

<p><%= button_to "Add Items to Menu", new_menu_item_path(@menu), method: :get %></p>
<p><%= button_to "Edit Menu Name", edit_menu_path(@menu), method: :get %></p>
<p><%= button_to "Delete Menu Name", menu_path(@menu), method: :delete %></p>