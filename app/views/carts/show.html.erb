<h2><%= current_user.name %>'s Cart</h2>
<ul>
    <% @cart.line_items.each do |line_item| %>
    <li>Item: <%= line_item.item.name %></li>
    <li>Price: <%= number_to_currency(line_item.item.price) %></li>
    <li>Quantity: <%= line_item.quantity %></li>
    <li>Total Price: <%= number_to_currency(line_item.total_price) %></li>

    <ul>
        <li><%= link_to "Add one", line_item_add_path(:id => line_item), method: :post %></li>
        <li><%= link_to "Reduce one", line_item_reduce_path(:id => line_item), method: :post %></li>
        <li><%= link_to "Remove item", line_item_path(line_item), method: :delete %></li>
    </ul>

    <% end %>
</ul>
<h3>Sub total: $<%= @cart.sub_total %></h3>
<%= link_to "Proceed to checkout", new_order_path %><br>

<%= link_to "Empty cart", cart_path(@current_cart),method: :delete, data: {confirm: "Are you sure?"} %>